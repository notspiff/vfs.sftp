<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.sftp"
  version="1.0.7"
  name="SFTP support"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.vfs"
    protocols="sftp|ssh"
    files="true"
    directories="true"
    supportDialog="true"
    supportPath="true"
    supportUsername="true"
    supportPassword="true"
    supportPort="true"
    supportBrowsing="false"
    defaultPort="22"
    type="sftp"
    label="20260"
    zeroconf="_sftp-ssh._tcp"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">SSH File Transfer Protocol support</summary>
    <description lang="en_GB">The SSH File Transfer Protocol (also Secure File Transfer Protocol, or SFTP) is a network protocol that provides file access, file transfer, and file management over any reliable data stream.

This addon allows file access to data in it.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/xbmc/vfs.sftp</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
